<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/ampm_text"
            style="@style/body6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="오전"
            android:textColor="@color/grey_700"
            app:layout_constraintBottom_toBottomOf="@id/time_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/time_text"
            style="@style/title7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="9시 30분"
            android:textColor="@color/grey_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ampm_text"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/time_text"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/time_delete_btn"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_6_grey_200_grey_100"
                android:gravity="center"
                android:minHeight="40dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:text="삭제"
                android:textColor="@color/grey_700" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_200" />
</LinearLayout>
